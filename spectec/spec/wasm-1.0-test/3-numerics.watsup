def $binop(FNN fnn, SUB, fN_1, fN_2) = $fsub($size(FNN fnn), fN_1, fN_2)
def $binop(FNN fnn, MUL, fN_1, fN_2) = $fmul($size(FNN fnn), fN_1, fN_2)
