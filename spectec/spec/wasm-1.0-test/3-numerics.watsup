def $binop(FNN fnn, COPYSIGN, fN_1, fN_2) = $fcopysign($size(FNN fnn), fN_1, fN_2)

def $unop(FNN fnn, ABS, fN) = $fabs($size(FNN fnn), fN)
def $unop(FNN fnn, NEG, fN) = $fneg($size(FNN fnn), fN)
